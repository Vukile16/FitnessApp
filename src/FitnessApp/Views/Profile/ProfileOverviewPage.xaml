<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessApp.Views.Profile.ProfileOverviewPage"
             xmlns:helpers="clr-namespace:FitnessApp.Helpers"
             xmlns:list="clr-namespace:System.Collections.Generic;assembly=netstandard" 
             xmlns:viewmodels="clr-namespace:FitnessApp.ViewModels" 
             x:DataType="viewmodels:ProfileOverviewViewModel"
             BackgroundColor="{StaticResource Background}">

    <ContentPage.BindingContext>
        <viewmodels:ProfileOverviewViewModel/>
    </ContentPage.BindingContext>
    
    <Shell.TitleView>
        <StackLayout HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand">
            <Label Text="Vukile Simelane" 
                   HorizontalTextAlignment="Center"
                   FontSize="Medium"
                   TextColor="Black"
                   Margin="{OnPlatform iOS='0,12,0,4', Android='0,16,0,8'}"/>
            <BoxView 
                HorizontalOptions="FillAndExpand"
                HeightRequest="1"
                Margin="{OnPlatform Android='0,0,16,0'}"
                BackgroundColor="#DDD"/>
        </StackLayout>
    </Shell.TitleView>
    <ScrollView>
        <StackLayout Padding="8">
            <Frame Padding="0,12"
                   HasShadow="False"
                   CornerRadius="6">
                <Grid>
                    <Label 
                        Text="{x:Static helpers:FAIcons.Edit}"
                        FontFamily="FARegular"
                        Margin="0,0,10,0"
                        TextColor="{StaticResource TextSecondary}"
                        VerticalOptions="Start"
                        FontSize="Large"
                        HorizontalOptions="EndAndExpand">
                    </Label>
                    <StackLayout>
                        <Image
                            Margin="0,8,0,0"
                            HeightRequest="100"
                            HorizontalOptions="Center"
                            Source="vukile.jpg"
                            VerticalOptions="Center"
                            WidthRequest="100">
                            <Image.Clip>
                                <EllipseGeometry
                                        Center="50,50"
                                        RadiusX="50"
                                        RadiusY="50"/>
                            </Image.Clip>
                        </Image>
                        <Label Text="Vukile Simelane"
                               Margin="0,8"
                               HorizontalOptions="Center"
                               FontSize="Title"
                               TextColor="{StaticResource TextPrimary}"/>
                        
                        <Button Text="Add Tags"
                                BackgroundColor="Transparent"
                                BorderColor="{StaticResource Background}"
                                CornerRadius="18"
                                HorizontalOptions="Center"
                                BorderWidth="1"
                                Padding="40,0,40,0"
                                Margin="0,4,0,16"
                                HeightRequest="36"/>

                        <BoxView 
                            HorizontalOptions="FillAndExpand"
                            HeightRequest="1"
                            VerticalOptions="Center"
                            BackgroundColor="{StaticResource Background}"/>

                        <Grid
                            ColumnDefinitions=".3*, .3*, .4*, Auto"
                            RowDefinitions="Auto,Auto"
                            RowSpacing="0"
                            Padding="24,8,24,0">
                            <Label Text="4" 
                                   TextColor="{StaticResource TextPrimary}" 
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label Grid.Row="1" 
                                   Text="Followers"/>
                            
                            <Label Grid.Column="1" 
                                   Text="4"
                                   TextColor="{StaticResource TextPrimary}" 
                                   FontAttributes="Bold"
                                   FontSize="Medium"/>
                            <Label Grid.Row="1" 
                                   Grid.Column="1" 
                                   Text="Following"/>

                            <Label 
                                Text="{x:Static helpers:FAIcons.Search}"
                                FontFamily="FASolid"
                                Margin="0,0,4,0"
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center"
                                Grid.Column="2"
                                Grid.RowSpan="2"
                                FontSize="Title"
                                HorizontalOptions="EndAndExpand">
                            </Label>

                            <Label Grid.Column="3" 
                                   Text="Find"
                                   VerticalOptions="End"/>

                            <Label Grid.Row="1" 
                                   Grid.Column="3" 
                                   Text="Following"
                                   VerticalOptions="Start"/>

                        </Grid>
                    </StackLayout>
                </Grid>              
            </Frame>   
            
            
            
            <Frame Padding="0"
                   HasShadow="False"
                   CornerRadius="6">
                <Grid RowDefinitions="Auto,Auto,Auto">
                    <Grid
                        BackgroundColor="{StaticResource CardHeaderBackground}">
                        <StackLayout HorizontalOptions="Center"
                                 Orientation="Horizontal"
                                 Padding="0,16"
                                 Spacing="2">
                            <Label 
                                Text="30 Day Activity"
                                FontSize="Medium"
                                TextColor="{StaticResource TextPrimary}"/>
                            <Label 
                                Text=" - " 
                                FontSize="Medium"  
                                TextColor="{StaticResource TextSecondary}"
                                VerticalTextAlignment="Center"/>

                            <Label 
                                Text="Jan 29 - Feb 19"
                                FontSize="Medium"
                                TextColor="{StaticResource TextSecondary}"/>
                        </StackLayout>
                    </Grid>

                    <Grid ColumnDefinitions="*,1, Auto"
                          Padding="8"
                          Grid.Row="1"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                        
                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="Center"
                                     BindableLayout.ItemsSource="{Binding Days}">
                            <!--<BindableLayout.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>M</x:String>
                                    <x:String>T</x:String>
                                    <x:String>W</x:String>
                                    <x:String>T</x:String>
                                    <x:String>F</x:String>
                                    <x:String>S</x:String>
                                    <x:String>S</x:String>
                                </x:Array>
                            </BindableLayout.ItemsSource>-->
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <StackLayout Margin="2,2" WidthRequest="28">
                                        <Label Text="{Binding .}"
                                               HorizontalOptions="Center"
                                               FontSize="Micro"
                                               TextColor="{StaticResource TextPrimary}"/>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="CenterAndExpand"
                                     BindableLayout.ItemsSource="{Binding Week1}"
                                     Grid.Row="1">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <Frame 
                                           Margin="4,2"
                                           BackgroundColor="#49679B"
                                           Padding="0"
                                           HeightRequest="24"
                                           WidthRequest="24"
                                           CornerRadius="12">
                                        <Label Text="{Binding .}"
                                               HorizontalOptions="Center"
                                               FontSize="Micro"
                                               VerticalOptions="Center"
                                               TextColor="White"/>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="CenterAndExpand"
                                     BindableLayout.ItemsSource="{Binding Week2}"
                                     Grid.Row="2">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <Frame BackgroundColor="#49679B"
                                           Padding="0"
                                           Margin="4,2"
                                           HeightRequest="24"
                                           WidthRequest="24"
                                           CornerRadius="12">
                                        <Label Text="{Binding .}"
                                               HorizontalOptions="Center"
                                               FontSize="Micro"
                                               VerticalOptions="Center"
                                               TextColor="White"/>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="CenterAndExpand"
                                     BindableLayout.ItemsSource="{Binding Week3}"
                                     Grid.Row="3">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <Frame BackgroundColor="#49679B"
                                           Padding="0"
                                           Margin="4,2"
                                           HeightRequest="24"
                                           WidthRequest="24"
                                           CornerRadius="12">
                                        <Label Text="{Binding .}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontSize="Micro"
                                               TextColor="White"/>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="CenterAndExpand"
                                     BindableLayout.ItemsSource="{Binding Week4}"
                                     Grid.Row="4">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <Frame BackgroundColor="#49679B"
                                           Padding="0"
                                            Margin="4,2"
                                           HeightRequest="24"
                                           WidthRequest="24"
                                           CornerRadius="12">
                                        <Label Text="{Binding .}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontSize="Micro"
                                               TextColor="White"/>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="CenterAndExpand"
                                     BindableLayout.ItemsSource="{Binding Week5}"
                                     Grid.Row="5">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <Frame BackgroundColor="{StaticResource BlueAccent}"
                                           Padding="0"
                                           Margin="4,2"
                                           VerticalOptions="Start"
                                           HeightRequest="24"
                                           WidthRequest="24"
                                           CornerRadius="12">
                                        <Label Text="{Binding .}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               FontSize="Micro"
                                               TextColor="White"/>
                                    </Frame>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>
                        
                        <BoxView Grid.RowSpan="6"
                                 Grid.Column="1"
                                 Margin="0"
                                 BackgroundColor="{StaticResource Background}"
                                 WidthRequest="1"
                                 VerticalOptions="FillAndExpand"/>

                        <StackLayout BindableLayout.ItemsSource="{Binding CompletedWeeks}"
                                     Grid.Column="2"
                                     Grid.RowSpan="6"
                                     Margin="18,0"
                                     Spacing="0">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType ="x:String">
                                    <StackLayout Spacing="0">
                                        <BoxView
                                            HorizontalOptions="Center"
                                            BackgroundColor="LightBlue"
                                            WidthRequest="1"
                                            HeightRequest="22"/>
                                        <Label Text="{Binding .}"
                                               FontFamily="FASolid"
                                               TextColor="LightBlue"
                                               FontSize="Medium"/>
                                    </StackLayout>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </StackLayout>

                    </Grid>

                    <Grid
                        BackgroundColor="{StaticResource CardHeaderBackground}"
                        Grid.Row="2"
                        ColumnDefinitions="*,*,*">
                        <StackLayout HorizontalOptions="Center"
                                     Orientation="Horizontal"
                                     Padding="0,16"
                                     Spacing="8">
                            <Label 
                                Text="21"
                                FontSize="36"
                                TextColor="{StaticResource TextPrimary}"/>

                            <Label 
                                Text="Active&#10; Days" 
                                FontSize="Micro"  
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center"/>
                        </StackLayout> 
                        
                        <StackLayout HorizontalOptions="Center"
                                     Orientation="Horizontal"
                                     Padding="0,16"
                                     Spacing="8"
                                     Grid.Column="1">
                            <Frame HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   HeightRequest="40"
                                   WidthRequest="40"
                                   CornerRadius="20"
                                   Padding="0"
                                   HasShadow="False">
                                <Label 
                                    FontFamily="FASolid"
                                    FontSize="Medium"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    Text="{x:Static helpers:FAIcons.ArrowDown}"
                                    TextColor="{StaticResource TextPrimary}"/>
                            </Frame>

                            <Label 
                                FontSize="Micro"  
                                VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="9 Days&#10;" TextColor="Black"/>
                                        <Span Text="vs. Last 30" TextColor="{StaticResource TextSecondary}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout> 
                        
                        <StackLayout HorizontalOptions="Center"
                                     Orientation="Horizontal"
                                     Padding="0,16"
                                     Spacing="8"
                                     Grid.Column="2">
                            <Label 
                                Text="17"
                                FontSize="36"
                                TextColor="{StaticResource TextPrimary}"/>

                            <Label 
                                Text="Week&#10;Streak" 
                                FontSize="Micro"  
                                TextColor="{StaticResource TextSecondary}"
                                VerticalOptions="Center"/>
                        </StackLayout>
                    </Grid>

                </Grid>
            </Frame>



            <Frame Padding="0"
                   HasShadow="False"
                   CornerRadius="6">
                <Grid RowDefinitions="Auto,Auto,Auto">
                    <Grid
                        BackgroundColor="{StaticResource CardHeaderBackground}">
                        <StackLayout HorizontalOptions="Center"
                                 Orientation="Horizontal"
                                 Padding="0,16"
                                 Spacing="8">
                            <Label 
                                Text="116"
                                FontSize="Medium"
                                TextColor="{StaticResource TextPrimary}"/>

                            <Label 
                                Text="Workouts"
                                FontSize="Medium"
                                TextColor="{StaticResource TextSecondary}"/>
                        </StackLayout>
                        <Label Text="{x:Static helpers:FAIcons.ChevronRight}"
                               FontFamily="FASolid"
                               FontSize="Medium"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               Margin="0,0,16,0"/>
                    </Grid>

                    <Grid ColumnDefinitions="*,*,*"
                          Padding="8"
                          Grid.Row="1"
                          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
                          RowSpacing="20">

                        <StackLayout HorizontalOptions="Center">
                            <Label Text="Cycling"
                                   TextColor="{StaticResource BlueAccent}"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="112"
                                   FontSize="Medium"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>
                        
                        <StackLayout HorizontalOptions="Center" Grid.Column="1">
                            <Label Text="Strength"
                                   TextColor="{StaticResource BlueAccent}"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="2"
                                   FontSize="Medium"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <StackLayout HorizontalOptions="Center" Grid.Column="2">
                            <Label Text="Cardio"
                                   TextColor="{StaticResource BlueAccent}"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="1"
                                   FontSize="Medium"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <BoxView BackgroundColor="{StaticResource Background}"
                                 HeightRequest="1"
                                 HorizontalOptions="FillAndExpand"
                                 Grid.Row="1"
                                 Grid.ColumnSpan="3"/> 
                        
                        
                        <StackLayout HorizontalOptions="Center"
                                     Grid.Row="2">
                            <Label Text="Yoga"
                                   TextColor="{StaticResource BlueAccent}"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="1"
                                   FontSize="Medium"
                                   TextColor="Black"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <StackLayout HorizontalOptions="Center" Grid.Column="1"  Grid.Row="2">
                            <Label Text="Bike Bootcamp"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   FontSize="Medium"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <StackLayout HorizontalOptions="Center" Grid.Column="2"  Grid.Row="2">
                            <Label Text="Meditation"
                                   TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   FontSize="Medium"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <BoxView BackgroundColor="{StaticResource Background}"
                                 HeightRequest="1"
                                 HorizontalOptions="FillAndExpand"
                                 Grid.Row="3"
                                 Grid.ColumnSpan="3"/>







                        <StackLayout HorizontalOptions="Center"
                                     Grid.Row="4">
                            <Label Text="Running"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   FontSize="Medium"
                                   TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <StackLayout HorizontalOptions="Center" Grid.Column="1"  Grid.Row="4">
                            <Label Text="Stretching"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   FontSize="Medium"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <StackLayout HorizontalOptions="Center" Grid.Column="2"  Grid.Row="4">
                            <Label Text="Tread Bootcamp"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   FontSize="Medium"
                                   TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                        <BoxView BackgroundColor="{StaticResource Background}"
                                 HeightRequest="1"
                                 HorizontalOptions="FillAndExpand"
                                 Grid.Row="5"
                                 Grid.ColumnSpan="3"/>

                        <StackLayout HorizontalOptions="Center"  Grid.Row="6">
                            <Label Text="Walking"
                                   TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   FontAttributes="Bold"
                                   FontSize="Small"
                                   HorizontalOptions="Center"/>
                            <Label Text="0"
                                   FontSize="Medium"
                                    TextColor="{StaticResource TextSecondary}"
                                   Opacity=".6"
                                   HorizontalOptions="Center"/>
                        </StackLayout>

                    </Grid>

                  

                </Grid>
            </Frame>


            <Frame Padding="0"
                   HasShadow="False"
                   CornerRadius="6">
                <Grid RowDefinitions="Auto,Auto">
                    <Grid
                        BackgroundColor="{StaticResource CardHeaderBackground}">
                        <StackLayout HorizontalOptions="Center"
                                 Orientation="Horizontal"
                                 Padding="0,16"
                                 Spacing="8">
                            <Label 
                                Text="Recent Achievements"
                                FontSize="Medium"
                                TextColor="{StaticResource TextPrimary}"/>

                        </StackLayout>
                        <Label Text="{x:Static helpers:FAIcons.ChevronRight}"
                               FontFamily="FASolid"
                               FontSize="Medium"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               Margin="0,0,16,0"/>
                    </Grid>

                    <StackLayout Orientation="Horizontal" Grid.Row="1"
                                 HorizontalOptions="FillAndExpand"
                                 Padding="24,24,24,12">
                        <Image HeightRequest="80"
                               HorizontalOptions="CenterAndExpand"
                               Source="strength"
                               VerticalOptions="Center"
                               WidthRequest="80">
                            <Image.Clip>
                                <EllipseGeometry Center="40,40"
                                                 RadiusX="38"
                                                 RadiusY="38"/>
                            </Image.Clip>
                        </Image>
                        
                        <Image HeightRequest="80"
                               HorizontalOptions="CenterAndExpand"
                               Source="strength"
                               VerticalOptions="Center"
                               WidthRequest="80">
                            <Image.Clip>
                                <EllipseGeometry Center="40,40"
                                                 RadiusX="38"
                                                 RadiusY="38"/>
                            </Image.Clip>
                        </Image>
                        
                        <Image HeightRequest="80"
                               HorizontalOptions="CenterAndExpand"
                               Source="strength"
                               VerticalOptions="Center"
                               WidthRequest="80">
                            <Image.Clip>
                                <EllipseGeometry Center="40,40"
                                                 RadiusX="38"
                                                 RadiusY="38"/>
                            </Image.Clip>
                        </Image>
                    </StackLayout>

                </Grid>
            </Frame>


        </StackLayout>
    </ScrollView>
</ContentPage>